package professor;

import java.util.*;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	     boolean run = true;
	      Scanner scanner = new Scanner(System.in);
	      
	      while(run) {
	         System.out.println("\n=========================================");
	         System.out.println("1.교수등록|2.교수조회|3.교수목록|4.교수삭제|0.종료");
	         System.out.println("=========================================");
	         System.out.println("선택>");
	         String menu= scanner.nextLine();
	         switch(menu) {
	            case "1" :
	               break;
	            case "2" :
	               break;
	            case "3" :
	               break;
	            case "4" :
	               break;
	            case "0" :
	               System.out.println("프로그램을 종료합니다.");
	               run = false;
	               break;
	            default:
	               System.out.println("0~4 메뉴를 입력하세요!");
	               break;
	         }//switch   
	      }//while
	   }//method
	}

}
