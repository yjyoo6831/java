package pm;
import java.util.*;
public class Sub01 {
	public static void run() {
		System.out.println("Sub01....");
		boolean run =true;
		Scanner scan=new Scanner(System.in);
		
		ArrayList<Sale> sales=new ArrayList<>();
		Sale s1=new Sale();
		s1.code="100";
		s1.name="TV";
		s1.price=350;
		s1.qnt=15;
		sales.add(s1);
		
		Sale s2=new Sale("101","세탁기",270,25);
		sales.add(s2);
		
		
		while(run) {
			System.out.println("-------------------------------------------------------");
			System.out.println("| 1.register | 2.list | 3. check | 4. delate | 0. exit |");
			System.out.println("--------------------------------------------------------");
			System.out.println("선택 : ");
			String menu=scan.nextLine();
			switch(menu) {
			case "0":
				
				run=false;
				break;
			case "1":
				break;
			case "2":
				for(Sale s:sales) {
					s.print_land();
				}
				break;
			case "3":
				break;
			case "4":
				break;
			default:
					System.out.println("0-4 메뉴 중 선택 ");
					
				
			}//switch
		}//while
		System.out.println("BY~~~~~~~E😀😀");
	}
}
