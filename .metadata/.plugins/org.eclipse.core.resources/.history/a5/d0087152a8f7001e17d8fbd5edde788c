			System.out.println("--------------------------");
			System.out.println("선택 : ");
			String menu=scan.nextLine();
			switch(menu) {
			case "0":
				run=false;
				break;
				
			case "1":
				break;
			case "2":
				break;
			case "3":
				break;
			case "4":
				break;
			default:
				System.out.println("0-4중 메뉴 선택");
			} //switch
		}//while
